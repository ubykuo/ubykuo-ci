    "entrypoints": {
      "cli": "ubykuo-ci",
      "daemon": "daemon.js"
    },
    "templates": {
      "postinst": "templates/postinst.sh"
    }
  },
  "dependencies": {
    "commander": "^2.12.2",
    "dotenv": "^4.0.0",
    "git-url-parse": "^7.0.1",
    "jsonschema": "^1.2.0",
    "pem": "^1.12.3",
    "queue": "^4.4.2",
    "request": "^2.83.0",
    "winston": "^3.0.0-rc1"
  },
