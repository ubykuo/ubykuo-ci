  "keywords": [
    "node",
    "deploy",
    "ci",
    "webhook",
    "bitbucket",
    "github"
  ],
  "description": "Lightweight Node.JS deployer to be used with Bitbucket or Github POST service hooks",
  "version": "0.1.0",
  "repository": {
    "url": "https://github.com/ubykuo/ubykuo-ci"
  },
  "node_deb": {
    "version": "0.1.0-beta",
